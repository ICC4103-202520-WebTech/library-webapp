
  <%= form_with model: @author do |form| %>
    <div class="mb-3 col-4">
      <%= form.label :first_name, "Nombre", class: "form-label" %>
      <%= form.text_field :first_name, placeholder: "Escribe el nombre", class: "form-control" %>
    </div>
    <div class="mb-3 col-4">
      <%= form.label :last_name, "Apellido", class: "form-label" %>
      <%= form.text_field :last_name, placeholder: "Escribe el apellido", class: "form-control" %>
    </div>
    <div>
      <%= link_to "Cancelar", authors_path, class: "btn btn-secondary" %>
      <%= form.submit "Guardar", class: "btn btn-primary" %>
    </div>
  <% end %>
